@model EcommerceProject.Models.ForgetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifre Sıfırlama</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .reset-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
        }

        .btn-primary {
                        border: none;
        }
    </style>
</head>
<body>

    <div class="reset-container">
        <h1 class="text-center mb-4">Mail Onaylama Formu</h1>
        <form method="post">
            <div class="form-group">
                <h2 class="h5">Mail Adresini Giriniz</h2>
                <input class="form-control" type="email" asp-for="Email" placeholder="Email adresiniz" required />
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary btn-block" type="submit">Şifre linki gönder</button>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
