@model EcommerceProject.Models.LoginViewModel


<style>
	body {
		background-color: #f8f9fa;
		margin: 0 auto;
	}

	.login-container {
		margin-top: 5%;
		margin-bottom: 30%;
		margin-left: 30%;
		max-width: 500px;
		background-color: #fff;
		padding: 30px;
		border-radius: 10px;
		box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
	}

	.social-login a {
		font-size: 1.5rem;
		margin: 0 10px;
		color: #495057;
	}

		.social-login a:hover {
			color: #007bff;
		}

	.forgot-pass {
		color: #007bff;
	}

		.forgot-pass:hover {
			text-decoration: underline;
		}

	.btn-primary {
		background-color: #007bff;
		border: none;
	}
</style>
	<section id="form">
		<!--form-->
		<div class="container">
			<div class="row justify-content-center">
				<div class="login-container">
					<h2 class="text-center mb-4">Log In</h2>
					<form asp-action="Index" asp-controller="Login" method="post">
						<div class="form-group">
							<label for="username">Username</label>
							<input type="text" asp-for="UserName" class="form-control" id="username">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" class="form-control" asp-for="Password" id="password">
						</div>
						<div class="form-group form-check d-flex justify-content-between align-items-center">
							<input type="checkbox" class="form-check-input" id="rememberMe" checked="checked">
							<label class="form-check-label" for="rememberMe">Remember me</label>
							<a href="#" class="forgot-pass">Forgot Password?</a>
						</div>
						<button type="submit" class="btn btn-primary btn-block">Log In</button>
						<div class="text-center mt-4">
							<span class="text-muted">or sign in with</span>
							<div class="social-login mt-2">
								
								<a class="btn btn-info mt-2" asp-controller="GoogleSignIn" asp-action="GoogleLogin">Log In With Google</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		<script src="https://kit.fontawesome.com/a076d05399.js"></script>
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	</section><!--/form-->
