@model IEnumerable<EcommerceProject.Models.OrderModel>

<h2>Your Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>
                <td>@order.OrderDetails.Sum(od => od.Quantity * od.Price)</td>
                <td>Pending</td> <!-- Buraya sipariş durumunu ekleyebilirsiniz -->
            </tr>
        }
    </tbody>
</table>
